<h1><center><%= @course.title %></center></h1>
<p><%= @course.about.html_safe %></p>
  <% if current_user && current_user.role == "student" %>
    <a class="btn btn-default" href="/course_registrations/new?course_id=<%= @course.id %>" role="button">Enroll</a>
  <% end %>
<br>
<% @chapters.each do |chapter| %>
  <a href="/chapters/<%= chapter.id %>"><%= chapter.title %></a>
<% end %>
<hr>
<%= link_to "Add Chapter", new_chapter_path if @course.instructors.include?(current_user) || current_user.role == "admin" || current_user.role == "super_admin"%>