<div ng-app="enexlearning">
  <div ng-controller="sectionsCtrl">
    <div class=" well well-sm  bg-white borderZero"  uib-dropdown >
      <div class="btn-group date-block btn-group-justified font-small dropdown" data-toggle="buttons">
          <label href="#home" data-toggle="tab" class="btn btn-default  next font-small semiBold" title="Next Day" style="font-size:12px; border-radius:0;" id="button-home">
          Welcome!
          </label>
          <label  href="#tab_{{section['id']}}" data-toggle="tab" class="btn btn-default previous text-right font-small semiBold button-section" title="{{section['title']}}" style="font-size:12px;" ng-repeat="section in sections" id="myTitle_{{section['id']}}" ng-click="showSection(section)" >
            {{section['title']}}
          </label>
      </div>   
    </div>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade active in" id="home">
        <p class="">This is a chapter welcoming page!</p>
      </div>
      <div class="tab-pane fade active in" id="tab_{{content['id']}}">
        <p class="">{{content['content']}}</p>
        <p>{{developer}}</p>
      </div>
      <div class="log"></div>
    </div>
  </div>  
</div>
